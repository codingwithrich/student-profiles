            //-   label.label-checkbox100(for='ckb1')
            //-     | Remember me
            br
            .container-login100-form-btn
              button.login100-form-btn(type='submit')
                | Login
            br
            .container-login100-form-btn
              a.black-underline(href='/register')
                | Register
