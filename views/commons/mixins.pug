mixin headerTitle(title)
    .app-content.content
        .content-wrapper
            .content-wrapper-before
            .content-header.row
                .content-header-left.col-md-4.col-12.mb-2
                    h3.content-header-title= title
                .content-header-right.col-md-8.col-12
                    .breadcrumbs-top.float-md-right
                        .breadcrumb-wrapper.mr-1
                            ol.breadcrumb
                                li.breadcrumb-item
                                    a(href='/student-profile/form') HOME
                                li.breadcrumb-item.active= title
            if block
                block

